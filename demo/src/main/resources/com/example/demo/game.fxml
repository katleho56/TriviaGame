<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.demo.GameController"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <Label fx:id="questionLabel" text="Question" />
    <ImageView fx:id="mediaImageView" fitWidth="300" fitHeight="200" preserveRatio="true"/>
    <Button fx:id="optionButton1" onAction="#handleAnswerButtonAction" />
    <Button fx:id="optionButton2" onAction="#handleAnswerButtonAction" />
    <Button fx:id="optionButton3" onAction="#handleAnswerButtonAction" />
    <Button fx:id="optionButton4" onAction="#handleAnswerButtonAction" />
</VBox>

